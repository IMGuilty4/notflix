{
    "compilerOptions": {
      "baseUrl": "./src",
      "paths": {
        "@components/*": ["./components/*"],
        "@assets/*": ["./assets/*"],
        "@pages/*": ["./pages/*"],
        "@api/*": ["./api/*"],
        "@general/*": ["./general/*"]
      }
    },
    "exclude": ["node_modules", "**/node_modules/*", "build"],
    "include": ["./src"]
}